{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "allowJs": true,
    "outDir": "build/",
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "paths": {
      "*": ["node_modules/*"]
    },
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ]
}
